;
; [DBSetting]
; dsn:PDO Connection String. Each Database has format.
; user:PDO Connection User Name.
; password:PDO Connection Password.
; 
; note DSN sample is not warranty.

[DBSetting]
; MySQL
dsn="mysql:host=localhost;charset=utf8; dbname=testdb"
; PostgreSQL
;dsn="pgsql:dbname=testdb;host=localhost;port=5432"
; Oracle
;dsn="oci:dbname=//localhost/testdb"
; SQLServer 2008
;dsn="sqlsrv:Server=localhost\Express;Database=testdb"

user="testdb"
password="testdb"
option="PDO::ATTR_ORACLE_NULLS=>PDO::NULL_NATURA,PDO::ATTR_ERRMODE=>PDO::ERRMODE_EXCEPTION"